<html>
<head>
  <title>{{details.name.value}}</title>
  <link rel="dns-prefetch" href="//cdnjs.cloudflare.com">
  <link rel="canonical" href="http://mysite.com/" />
  <link rel="stylesheet" href="style.css" type="text/css" />
  <meta name="description" content="mysite html5 framework with scheme.org" />
</head>
<body>
  <div class="page-container">
    <div class="page-container-inner">
      <header>
        <div class="gallery">
          {{#each photos.photo}}
            <div class="gallery-image">
              <div class="gallery-image-title">{{title}}</div>
              <img alt={{title}} src='images/{{farmName}}'/>
            </div>
          {{/each}}
        </div>

        <div itemscope itemtype="http://schema.org/Restaurant">
          <h1 itemprop="name">{{details.name.value}}</h1>
          <meta itemprop="description" value="{{details.description.value}}"/>
          <address itemprop="address" itemscope itemtype="http://schema.org/PostalAddress">
            <span itemprop="streetAddress">{{details.streetAddress.value}}</span>,
            <span itemprop="addressLocality">{{details.addressLocality.value}}</span>,
            <span itemprop="addressRegion">{{details.addressRegion.value}}</span>
            <meta itemprop="postalCode" value="{{details.postalCode.value}}" />
          </address>
          <span itemprop="telephone">{{details.telephone.value}}</span>
          <a itemprop="email" href="mailto:{{details.email.value}}">Email Us</a>

          <p>
            Opening Hours:
            <time itemprop="openingHours" datetime="{{details.openingHours1.value}}">{{details.openingHours1.value}}</time>
            <time itemprop="openingHours" datetime="{{details.openingHours2.value}}">{{details.openingHours2.value}}</time>
          </p>
          <a itemprop="hasMap" target="_blank" href="{{details.mapUrl.value}}">Map</a>
          <meta itemprop="paymentAccepted" value="{{details.paymentAccepted.value}}" />
          <meta itemprop="acceptsReservations" value="{{details.acceptsReservations.value}}" />
          <meta itemprop="servesCuisine" value="{{details.servesCuisine.value}}" />
        </div>

        <nav itemscope itemtype="http://schema.org/SiteNavigationElement">
          <div class="singleMenu">
            <h2>{{details.singleMenuName.value}}</h2>
            {{#each singleMenu}}
            <div><a href="#singleMenu{{@index}}">{{@key}}</a></div>
            {{/each}}
          </div>

          <div class="groupMenu">
            <h2>{{details.groupMenuName.value}}</h2>
            <div>
              Number of People
              <select>
                <option>2</option>
                <option>3</option>
                <option>4</option>
                <option>5</option>
                <option>6</option>
                <option>7</option>
                <option>8</option>
                <option>9</option>
                <option>10</option>
              </select>
            </div>
            {{#each groupMenu}}
              <div><a href="#groupMenu{{@index}}">{{@key}}</a></div>
            {{/each}}
          </div>

        </nav>
      </header>

      <main>
        <section class="menu" itemscope itemtype="http://schema.org/Menu">
          <header>
            <h1 itemprop="name">{{details.singleMenuName.value}}</h1>
          </header>

          {{#each singleMenu}}
            <section>
              <header>
                <a name="singleMenu{{@index}}"></a>
                <h1 itemprop="name">{{@key}}</h1>
              </header>
            {{#each this}}
              <div class="menu-item" itemscope itemtype="http://schema.org/Thing">
                <span itemprop="name">{{name}}</span>
                {{#if description}}<span itemprop="description">{{description}}</span>{{/if}}
                {{#if price-large}}<span itemprop="price">{{price-large}}</span>{{/if}}
                {{#if price-regular}}<span itemprop="price">{{price-regular}}</span>{{/if}}
                {{#if price-small}}<span itemprop="price">{{price-small}}</span>{{/if}}
                {{#if image}}<span itemprop="image">{{image}}</span>{{/if}}
              </div>
            {{/each}}
            </section>
          {{/each}}
        </section>

        <section class="group-menu">
          <header>
            <h1>{{details.groupMenuName.value}}</h1>
          </header>

          {{#each groupMenu}}
            <section>
              <header>
                <a name="groupMenu{{@index}}"></a>
                <h3>{{@key}}</h3>
                <!-- select number of people, default is 4 -->
                <label>
                  <select>
                    <option>2</option>
                    <option>3</option>
                    <option>4</option>
                    <option>5</option>
                    <option>6</option>
                    <option>7</option>
                    <option>8</option>
                    <option>9</option>
                    <option>10</option>
                  </select>
                  People
                  </label>
              </header>
              {{#each this}}
              <div data-group-size="{{@key}}" style="display:none">
                {{#each this}}
                  <div class="menu-item">
                    <span>{{name}}</span>
                    <span class="price">{{price}}</span>
                  </div>
                {{/each}}
              </div>
              {{/each}}
            </section>
          {{/each}}
        </section>
      </main>

      <footer>

      </footer>
    </div>
  </div>
<script src="script.js"></script>
</body>
</html>
